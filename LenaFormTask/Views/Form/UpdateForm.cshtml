@model EntityLayer.Classes.Form

<div class="row">
	<div class="col-sm-6">
		<div class="card">
			<div class="card-header bg-transparent border-success">@Model.Name</div>
			<div class="card-body text-success">
				<p class="card-text">@Model.Description</p>
			</div>
			<div class="card-footer bg-transparent border-success">
				<p class="card-text">Oluşturulma Tarihi: @((Model.CreatedAt).ToString("MM/dd/yyyy"))</p>
			</div>
		</div>
	</div>
	<div class="col-sm-6">
		<form asp-action="UpdateForm" enctype="multipart/form-data" method="POST">
			<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
				<div class="modal-dialog" role="document">
					<div class="modal-content">
						<div class="modal-header">
							<h5 class="modal-title" id="exampleModalLabel">@Model.Name adlı formu güncellemek istediğinize emin misiniz?</h5>
							<button type="button" class="close" data-dismiss="modal" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
						<div class="modal-body">
							<div class="modal-footer">
								<button type="button" class="btn btn-secondary" data-dismiss="modal">Vazgeç</button>
								<button type="submit" class="btn btn-primary">Güncelle</button>
							</div>
						</div>
					</div>
				</div>
			</div>

			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group row">
				<label asp-for="Name" for="recipient-name" class="col-form-label">Adı: </label>
				<div class="col-sm-10">
					<input asp-for="Name" type="text" class="form-control" id="recipient-name">
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>

			</div>

			<div class="form-group">
				<label asp-for="Description" for="message-text" class="col-form-label">Açıklama:</label>
				<textarea asp-for="Description" class="form-control" id="message-text"></textarea>
			</div>
			<div class="d-flex justify-content-around form-group">
				<button type="button" class="btn btn-outline-warning" data-toggle="modal" data-target="#exampleModal">
					Güncelle
				</button>
				<a asp-action="Main" class="btn btn-outline-info">Vazgeç</a>
			</div>
		</form>
	</div>
</div>
